{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "allowJs": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "esModuleInterop": true,
        "paths": {
            "#llm/*": [
                "./src/*"
            ]
        },
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules/**"
    ]
}